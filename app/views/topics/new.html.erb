<%- model_class = Topic -%>
<div class="main box" style="margin-bottom:20px;">
  <div class="topic">
    <div class="topic_header">
      <h1><%=@group.name%>讨论组---新增话题</h1>
    </div>
    <div class="typecho-post-area">
      <%= form_for @topic,:multipart=>true do |f| %>
        <p>标题：</p>
        <%= f.text_field :title, {:class => 'text title',:style=>"width:540px;"} %>
        <%=f.text_field :group_id,{:type=>"hidden",:value=>"#{@group.id}"}%>
        <p>内容：</p>
        <%= f.text_area :description, {:class => 'title',:style=>"width:540px;height:80px"} %>
        <p>图片:</p>
        <%= f.file_field :image, {:class=>"file_field"} %>
       <div class="comment-submit" style="margin-top:10px;">
         <%= submit_tag "发布", :class=>"submit"%>&nbsp;&nbsp;
         <%= link_to "返回",group_topics_path(@group),:class=>"sumbit"%>
       </div>
      <% end %>
    </div><!-- end of  typecho-post-area -->
  </div><!-- div topic -->
</div>
